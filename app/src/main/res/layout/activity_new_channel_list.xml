<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.appcompat="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android.support.v7.appcompat:navigationIcon="@mipmap/ic_launcher">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_channel1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onAddChannelClick"
            android:contentDescription="@string/add_channel"
            android:scaleType="centerInside"
            android:src="@drawable/add_button" />

        <ImageButton
            android:id="@+id/twitch_login1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:onClick="onTwitchOauthClick"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/connect_via_twitch"
            android:src="@drawable/twitch_login" />

        <ImageButton
            android:id="@+id/settings"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:onClick="onSettingsClick"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/settings"
            android:contentDescription="lel" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_veiw"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
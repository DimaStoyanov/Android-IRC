<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Small" parent="AppTheme">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Mediuim" parent="AppTheme">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Large" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Dark.Small" parent="AppTheme.Dark">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Dark.Mediuim" parent="AppTheme.Dark">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Dark.Large" parent="AppTheme.Dark">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TwitchLogin">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">#6441a5</item>
        <item name="colorPrimaryDark">#6441a5</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

</resources>
